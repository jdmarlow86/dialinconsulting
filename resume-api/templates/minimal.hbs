<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <title>{{name}} — Resume</title>
    <link rel="stylesheet" href="{{baseUrl}}/resume.css" />
</head>
<body class="minimal">
    <header>
        <h1>{{name}}</h1>
        {{#if title}}<h2>{{title}}</h2>{{/if}}
        <p class="contact">
            {{contact.email}} · {{contact.phone}} · {{contact.location}}
            {{#if contact.links.length}} ·
            {{#each contact.links}}<span>{{this}}</span>{{#unless @last}} · {{/unless}}{{/each}}
            {{/if}}
        </p>
    </header>

    {{#if summary}}<section><h3>Summary</h3><p>{{summary}}</p></section>{{/if}}

    {{#if skills.length}}
    <section><h3>Skills</h3><p class="skills">{{#each skills}}{{this}}{{#unless @last}}, {{/unless}}{{/each}}</p></section>
    {{/if}}

    {{#if experience.length}}
    <section>
        <h3>Experience</h3>
        {{#each experience}}
        <div class="item">
            <div class="row">
                <strong>{{role}}</strong> — {{company}}
                <span class="date">{{start}} – {{end}}</span>
            </div>
            {{#if bullets.length}}<ul>{{#each bullets}}<li>{{this}}</li>{{/each}}</ul>{{/if}}
        </div>
        {{/each}}
    </section>
    {{/if}}

    {{#if projects.length}}
    <section>
        <h3>Projects</h3>
        {{#each projects}}
        <div class="item">
            <div class="row">
                <strong>{{name}}</strong>{{#if link}} — <span>{{link}}</span>{{/if}}
            </div>
            {{#if bullets.length}}<ul>{{#each bullets}}<li>{{this}}</li>{{/each}}</ul>{{/if}}
        </div>
        {{/each}}
    </section>
    {{/if}}

    {{#if education.length}}
    <section>
        <h3>Education</h3>
        {{#each education}}
        <div class="item">
            <div class="row">
                <strong>{{degree}}</strong> — {{school}}
                <span class="date">{{start}} – {{end}}</span>
            </div>
            {{#if details}}<p>{{details}}</p>{{/if}}
        </div>
        {{/each}}
    </section>
    {{/if}}

    {{#if certs.length}}
    <section>
        <h3>Certifications</h3>
        <ul>{{#each certs}}<li>{{name}} — {{issuer}} ({{year}})</li>{{/each}}</ul>
    </section>
    {{/if}}
</body>
</html>
