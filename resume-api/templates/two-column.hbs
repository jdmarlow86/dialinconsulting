<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <title>{{name}} — Resume</title>
    <link rel="stylesheet" href="{{baseUrl}}/resume.css" />
</head>
<body class="two-col">
    <header>
        <h1>{{name}}</h1>
        {{#if title}}<h2>{{title}}</h2>{{/if}}
        <p class="contact">
            {{contact.email}} · {{contact.phone}} · {{contact.location}}
            {{#if contact.links.length}} ·
            {{#each contact.links}}<span>{{this}}</span>{{#unless @last}} · {{/unless}}{{/each}}
            {{/if}}
        </p>
    </header>

    <main class="grid">
        <aside>
            {{#if summary}}<section><h3>Summary</h3><p>{{summary}}</p></section>{{/if}}
            {{#if skills.length}}<section><h3>Skills</h3><ul class="tight">{{#each skills}}<li>{{this}}</li>{{/each}}</ul></section>{{/if}}
            {{#if certs.length}}<section><h3>Certifications</h3><ul class="tight">{{#each certs}}<li>{{name}} — {{issuer}} ({{year}})</li>{{/each}}</ul></section>{{/if}}
            {{#if education.length}}<section>
                <h3>Education</h3>
                {{#each education}}
                <div class="item">
                    <strong>{{degree}}</strong><br />{{school}}<br /><span class="date">{{start}} – {{end}}</span>
                </div>
                {{/each}}
            </section>{{/if}}
        </aside>
        <section>
            {{#if experience.length}}<h3>Experience</h3>{{/if}}
            {{#each experience}}
            <div class="item">
                <div class="row">
                    <strong>{{role}}</strong> — {{company}}
                    <span class="date">{{start}} – {{end}}</span>
                </div>
                {{#if bullets.length}}<ul>{{#each bullets}}<li>{{this}}</li>{{/each}}</ul>{{/if}}
            </div>
            {{/each}}

            {{#if projects.length}}<h3>Projects</h3>{{/if}}
            {{#each projects}}
            <div class="item">
                <div class="row">
                    <strong>{{name}}</strong>{{#if link}} — <span>{{link}}</span>{{/if}}
                </div>
                {{#if bullets.length}}<ul>{{#each bullets}}<li>{{this}}</li>{{/each}}</ul>{{/if}}
            </div>
            {{/each}}
        </section>
    </main>
</body>
</html>
